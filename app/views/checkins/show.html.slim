.row
  h1.title
    = t('page.showing', model: t('activerecord.models.checkin'))
  #content_list.col-md-9
    p#notice
      = notice
    p
      strong
        = t('activerecord.models.item')
        | :
      = link_to @checkin.item.manifestation.original_title, @checkin.item
    p
      strong
        = t('activerecord.models.user')
        | :
      = link_to @checkin.librarian.username, @checkin.librarian
  #submenu.col-md-3
  ul.list-group
    li.list-group-item
      = link_to t('page.edit'), edit_checkin_path(@checkin)
    li.list-group-item
      = back_to_index(flash[:page_info])
