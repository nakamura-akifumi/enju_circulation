= form_for(@checkout) do |f|
  - if @checkout.errors.any?
    #errorExplanation
      h2
        = pluralize(@checkout.errors.count, "error")
        |  prohibited this checkout from being saved:
      ul
        - @checkout.errors.full_messages.each do |msg|
          li
            = msg
  .form-group
    = f.label :user_id
    br
    = f.text_field :user_id
  .form-group
    = f.label :item_id
    br
    = f.text_field :item_id
  .form-group
    = f.label :due_date
    br
    = f.datetime_select :due_date
  .form-control
    = f.submit class: 'btn btn-default'
