.row
  h1.title
    = t('page.listing', model: t('activerecord.models.manifestation_reserve_stat'))
  #content_list.col-md-9
    table.table.table-striped.index
      tr
        th
          = t('activerecord.attributes.manifestation_reserve_stat.start_date')
        th
          = t('activerecord.attributes.manifestation_reserve_stat.end_date')
        th
          = t('activerecord.attributes.manifestation_reserve_stat.state')
        th
      - @manifestation_reserve_stats.each do |manifestation_reserve_stat|
        |  <tr class="line
        = cycle("0", "1")
        | "> 
        td
          = l(manifestation_reserve_stat.start_date)
        td
          = l(manifestation_reserve_stat.end_date)
        td
          = localized_state(manifestation_reserve_stat.current_state)
        td
          = link_to t('page.show'), manifestation_reserve_stat
          = link_to t('page.destroy'), manifestation_reserve_stat, data: {confirm: t('page.are_you_sure')}, method: :delete
    = paginate(@manifestation_reserve_stats)
  #submenu.col-md-3
  ul
    li
      = link_to t('page.new', model: t('activerecord.models.manifestation_reserve_stat')), new_manifestation_reserve_stat_path
