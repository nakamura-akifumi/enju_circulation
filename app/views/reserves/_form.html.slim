= form_for(@reserve) do |f|
  - if @reserve.errors.any?
    #errorExplanation
      h2
        = pluralize(@reserve.errors.count, "error")
        |  prohibited this reserve from being saved:
      ul
        - @reserve.errors.full_messages.each do |msg|
          li
            = msg
  .form-group
    = f.label :user_id
    br
    = f.text_field :user_id
  .form-group
    = f.label :manifestation_id
    br
    - if @reserve.manifestation
      = render 'manifestations/title', manifestation: @reserve.manifestation
      = f.hidden_field :manifestation_id
    - else
      = f.text_field :manifestation_id
  .form-group
    = f.label :item_id
    br
    = f.text_field :item_id
  .form-group
    = f.label :state
    br
    = f.text_field :state
  .form-group
    = f.label :checked_out_at
    br
    = f.datetime_select :checked_out_at
  .form-group
    = f.label :canceled_at
    br
    = f.datetime_select :canceled_at
  .form-group
    = f.label :expired_at
    br
    = f.datetime_select :expired_at
  .form-control
    = f.submit class: 'btn btn-default'
